<UserControl x:Class="GraphAlgorithmRenderer.SettingsWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>

        <StackPanel Orientation="Vertical">

            <TextBlock Margin="10" HorizontalAlignment="Center">Config Window</TextBlock>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBox x:Name="Config" Height="208" TextWrapping="Wrap" AcceptsReturn="True"
                     Text="{Binding Path = JsonConfig, Mode=TwoWay}" TextChanged="Config_TextChanged" />
            </ScrollViewer>

        </StackPanel>
        <StackPanel Orientation="Horizontal">
           
            <Button x:Name="Get" Content="Get" Margin="22,263,211,10" Height="30" Width="74"/>
            <Button x:Name="Load" Content="Load" Margin="120,263,32,10" Height="30" Width="74"/>
        </StackPanel>
    </Grid>
</UserControl>
