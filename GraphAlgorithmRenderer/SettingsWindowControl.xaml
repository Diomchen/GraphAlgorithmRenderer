<UserControl x:Class="GraphAlgorithmRenderer.SettingsWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:local="clr-namespace:GraphAlgorithmRenderer.UIControls"
             xmlns:ui="clr-namespace:GraphAlgorithmRenderer.UIControls"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <TabControl>
            <TabItem Header="UI">

               <ui:MainControl x:Name="MainControl"/>
            </TabItem>
            <TabItem Header="Json">
                <StackPanel Orientation="Vertical">


                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="Config" TextWrapping="Wrap" AcceptsReturn="True" MaxHeight="220"
                     Text="{Binding Path = JsonConfig, Mode=TwoWay}" TextChanged="Config_TextChanged" />
                    </ScrollViewer>
                    <Button x:Name="Load" Content="Load" Margin="20" MaxWidth="90"/>

                    <Button x:Name="Export" Content="Export" Margin="20" MaxWidth="90"/>

                </StackPanel>
            </TabItem>
            

        </TabControl>
    </Grid>
</UserControl>
