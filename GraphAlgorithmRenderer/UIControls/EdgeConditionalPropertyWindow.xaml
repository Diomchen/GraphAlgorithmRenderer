<Window x:Class="GraphAlgorithmRenderer.UIControls.EdgeConditionalPropertyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GraphAlgorithmRenderer.UIControls"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:properties="clr-namespace:GraphAlgorithmRenderer.UIControls.Properties"
        mc:Ignorable="d"
        Height="Auto" Width="Auto" SizeToContent="WidthAndHeight">
    <WrapPanel Orientation="Horizontal">

    

        <local:ConditionControl Margin="8" Grid.Column="0" Grid.Row="0" x:Name="ConditionControl" />
        <properties:LabelUiProperty Margin="8"  x:Name="LabelUiProperty" />
        <properties:StyleUiProperty Margin="8" x:Name="StyleUiProperty" />
        <properties:LineColorUiProperty Margin="8"  x:Name="LineColorUiProperty" />
        <properties:LineWidthUiProperty Margin="8" x:Name="LineWidthUiProperty" />
        <properties:ArrowUiProperty Margin="8" x:Name="ArrowUiProperty" />
        <Button x:Name="ok" Content="Ok" IsDefault="True" Click="Ok_Click" VerticalAlignment="Bottom" Margin="10" HorizontalAlignment="Left" MinWidth="60" MaxHeight="30"/>
        
    </WrapPanel>
</Window>