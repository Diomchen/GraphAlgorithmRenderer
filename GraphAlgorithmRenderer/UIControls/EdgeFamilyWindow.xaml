<Window x:Class="GraphAlgorithmRenderer.UIControls.EdgeFamilyWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphAlgorithmRenderer.UIControls"
             xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="identifiers" AutoGenerateColumns="True" ItemsSource="{DynamicResource ResourceKey=Ranges}" HorizontalAlignment="Left" Height="249" Margin="55,52,0,0" VerticalAlignment="Top" Width="252">
            <DataGrid.Resources>
                <collections:ArrayList x:Key="Ranges">
                </collections:ArrayList>
            </DataGrid.Resources>
        </DataGrid>
        <Button x:Name="AddId" Content="Add id" HorizontalAlignment="Left" Margin="81,338,0,0" VerticalAlignment="Top" Width="75" Click="AddId_Click"/>
        <Button x:Name="RemoveId" Content="Remove id" HorizontalAlignment="Left" Margin="81,374,0,0" VerticalAlignment="Top" Width="75" Click="RemoveId_Click"/>
        <Expander x:Name="targetExpander" Header="Target Node Family" HorizontalAlignment="Left" Height="100" Margin="498,201,0,0" VerticalAlignment="Top" Width="135">
            <StackPanel x:Name="TargetPanel"></StackPanel>
        </Expander>
        <Button x:Name="targetButton" Content="Target" HorizontalAlignment="Left" Margin="527,162,0,0" VerticalAlignment="Top" Width="75" Click="TargetButton_Click"/>
        <Button x:Name="sourceButton" Content="Source" HorizontalAlignment="Left" Margin="681,161,0,0" VerticalAlignment="Top" Width="75" Click="SourceButton_Click"/>
        <Expander x:Name="sourceExpander" Header="Source Node Family" HorizontalAlignment="Left" Height="100" Margin="651,202,0,0" VerticalAlignment="Top" Width="137">
            <StackPanel x:Name="SourcePanel"></StackPanel>
        </Expander>
        <TextBox x:Name="validationTemplateBox" HorizontalAlignment="Left" Height="23" Margin="394,57,0,0" TextWrapping="Wrap" Text="true" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Validation template" HorizontalAlignment="Left" Margin="394,32,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="directed" Content="Directed" HorizontalAlignment="Left" Margin="606,58,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="properties" HorizontalAlignment="Left" Height="162" Margin="346,139,0,0" VerticalAlignment="Top" Width="113"/>
        <Label x:Name="label1" Content="Conditional properties" HorizontalAlignment="Left" Margin="336,110,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ok" Content="Ok" HorizontalAlignment="Left" Margin="681,379,0,0" VerticalAlignment="Top" Width="75" Click="Ok_Click"/>
        <Button x:Name="AddProperty" Content="Add property" HorizontalAlignment="Left" Margin="349,338,0,0" VerticalAlignment="Top" Width="110" Click="AddProperty_Click"/>
        <Button x:Name="RemoveProperty" Content="Remove property" HorizontalAlignment="Left" Margin="349,374,0,0" VerticalAlignment="Top" Width="110" Click="RemoveProperty_Click"/>


    </Grid>
</Window>
