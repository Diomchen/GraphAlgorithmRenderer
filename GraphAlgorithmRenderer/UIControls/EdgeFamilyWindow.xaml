<Window x:Class="GraphAlgorithmRenderer.UIControls.EdgeFamilyWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphAlgorithmRenderer.UIControls"
             xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="identifiers" AutoGenerateColumns="True" ItemsSource="{DynamicResource ResourceKey=Ranges}" HorizontalAlignment="Left" Height="249" Margin="55,52,0,0" VerticalAlignment="Top" Width="252">
            <DataGrid.Resources>
                <collections:ArrayList x:Key="Ranges">
                </collections:ArrayList>
            </DataGrid.Resources>
        </DataGrid>
        <Button x:Name="AddId" Content="Add id" HorizontalAlignment="Left" Margin="81,338,0,0" VerticalAlignment="Top" Width="75" Click="AddId_Click"/>
        <Button x:Name="RemoveId" Content="Remove id" HorizontalAlignment="Left" Margin="81,374,0,0" VerticalAlignment="Top" Width="75" Click="RemoveId_Click"/>
        <Expander x:Name="targetExpander" Header="Target Node Family" HorizontalAlignment="Left" Height="100" Margin="439,338,0,-17.333" VerticalAlignment="Top" Width="135">
            <StackPanel x:Name="TargetPanel"></StackPanel>
        </Expander>
        <Button x:Name="targetButton" Content="Target" HorizontalAlignment="Left" Margin="439,301,0,0" VerticalAlignment="Top" Width="75" Click="TargetButton_Click"/>
        <Button x:Name="sourceButton" Content="Source" HorizontalAlignment="Left" Margin="625,301,0,0" VerticalAlignment="Top" Width="75" Click="SourceButton_Click"/>
        <Expander x:Name="sourceExpander" Header="Source Node Family" HorizontalAlignment="Left" Height="100" Margin="627,338,0,-17.333" VerticalAlignment="Top" Width="137">
            <StackPanel x:Name="SourcePanel"></StackPanel>
        </Expander>


    </Grid>
</Window>
