<UserControl x:Class="GraphAlgorithmRenderer.UIControls.Properties.LabelUiProperty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GraphAlgorithmRenderer.UIControls.Properties"
             mc:Ignorable="d">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Black">
            <StackPanel Orientation="Vertical">
                <CheckBox x:Name="CheckBox">Label</CheckBox>
                <Separator />
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <Label>Label template</Label>
                        <TextBox x:Name="LabelTextBox" TextWrapping="Wrap"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Label>Font size (optional)</Label>
                        <TextBox x:Name="FontSizeTextBox" TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>