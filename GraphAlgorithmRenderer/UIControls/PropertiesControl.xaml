<UserControl x:Class="GraphAlgorithmRenderer.UIControls.PropertiesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphAlgorithmRenderer.UIControls"
             mc:Ignorable="d" >
    <StackPanel Orientation="Vertical">
        <Label Content="Conditional properties" Margin="15" />
        <ListBox x:Name="properties" Margin="10" />


        <Button x:Name="AddProperty" Content="Add property" Margin="10" Click="AddProperty_Click" />
        <Button x:Name="RemoveProperty" Content="Remove property" Margin="10" Click="RemoveProperty_Click" />
        <Button x:Name="Up" Margin="10" Click="Up_Click">Move up</Button>
        <Button x:Name="Down" Margin="10" Click="Down_Click">Move down</Button>
    </StackPanel>
</UserControl>
